@model RoleVM
@{
    ViewData["Title"] = "Update";
    Layout = "~/Areas/AdminPanel/Views/_AdminLayout.cshtml";
}
  <section class="content-header">
      <div class="container">
        <div class="row mb-2">
          <div class="col-sm-6">
            <div>
              <form method="post" >
                 <h4>@Model.FullName</h4>
                 <div class="form-group">
                  <input type="hidden" name="id" value="@Model.UserId" />
                    @foreach (var item in Model.roles)
                 {
                 <input name="roles" value="@item.ToString()" class="form-check-input" type="checkbox" @(Model.userRoles.Contains(item.ToString())? "checked=&quot;checked&quot;":" ") /> @item <br />
                 }
                <button type="submit" class="btn btn-primary">Update</button>
                <button asp-action="update" class="btn btn-primary">Go Back</button>
           </div>
         </form>
        </div>
       </div>
     </div>
    </div>
 </section>



<script src="~/admin/plugins/jquery/jquery.min.js"></script>
