@model UserDetailVM

@{
    ViewData["Title"] = "Detail";
    Layout = "~/Areas/AdminPanel/Views/_AdminLayout.cshtml";
    int no = 0;
}
    <!-- /.row -->
        <div class="row">
          <div class="col-12">
            <div class="card">
              <div class="card-header">
                <h3 class="card-title">Responsive Hover Table</h3>

                <div class="card-tools">
                  <div class="input-group input-group-sm" style="width: 150px;">
                    <input type="text" name="table_search" class="form-control float-right" placeholder="Search">

                    <div class="input-group-append">
                      <button type="submit" class="btn btn-default">
                        <i class="fas fa-search"></i>
                      </button>
                    </div>
                  </div>
                </div>
              </div>
              <!-- /.card-header -->
              <div class="card-body table-responsive p-0">
                <table class="table table-hover text-nowrap">
                  <thead>
                    <tr>
                      <th>No</th>
                      <th>User</th>
                      <th>Date</th>
                      <th>Status</th>
                      <th>Setting</th>
                    </tr>
                  </thead>
                  <tbody>
                    @foreach (var item in Model.orders)
                    {
                       no++;
                         <tr>
                      <td>@no</td>
                      <td>@item.AppUser.FullName</td>
                      <td>@item.SaledAt.ToString("dddd, dd MMMM yyyy HH:mm:ss.fffffff")</td>
                      <td><span class="tag tag-success">@item.OrderStatus</span></td>
                      <td>
                        <a class="btn btn-primary" asp-action="orderDetail" asp-route-id="@item.Id"> <box-icon name='message-rounded-edit'></box-icon></a>
                      </td>
                     </tr>
                   }

                  </tbody>
                </table>
              </div>
              <!-- /.card-body -->
            </div>
            <!-- /.card -->
          </div>
        </div>
        <!-- /.row -->