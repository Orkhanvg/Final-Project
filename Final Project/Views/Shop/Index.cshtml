@model PaginationVM<Product>
@{ ViewData["Title"] = "Basket";
    Layout = "~/Views/Shared/_Layout.cshtml"; }




<!-- start product-grid section -->
<section>
    <div class="container lg-container">
        <div class="row">

            <!-- start product grid left panel -->
            <div class="col-lg-3 col-md-12 sm-margin-30px-bottom">

                <div class="side-bar">
                    <div class="widget sm-margin-30px-bottom">
                        <div class="widget-title">
                            <h6>Categories</h6>
                        </div>
                        <ul class="list-style3">
                            <li><a href="#">Accessories</a></li>
                            <li><a href="#">Care</a></li>
                            <li><a href="#">Clothing</a></li>
                            <li><a href="#">Decor</a></li>
                            <li><a href="#">Food</a></li>
                            <li><a href="#">Others</a></li>
                            <li><a href="#">Uncategorized</a></li>
                        </ul>
                    </div>
                    <div class="widget">
                        <div class="widget-title">
                            <h6>Popular Products</h6>
                        </div>

                        <div class="media border-bottom margin-15px-bottom padding-15px-bottom">
                            <img src="img/shop/09.jpg" class="mr-3 border-radius-5" alt="...">
                            <div class="media-body">
                                <h5 class="mt-0 font-size16 no-margin-bottom"><a href="javascript:void(0);" class="text-extra-dark-gray">Meats biscuits</a></h5> $599
                            </div>
                        </div>
                        <div class="media border-bottom margin-15px-bottom padding-15px-bottom">
                            <img src="img/shop/10.jpg" class="mr-3 border-radius-5" alt="...">
                            <div class="media-body">
                                <h5 class="mt-0 font-size16 no-margin-bottom"><a href="javascript:void(0);" class="text-extra-dark-gray">Dog toys</a></h5> $100
                            </div>
                        </div>
                        <div class="media">
                            <img src="img/shop/11.jpg" class="mr-3 border-radius-5" alt="...">
                            <div class="media-body">
                                <h5 class="mt-0 font-size16 no-margin-bottom"><a href="javascript:void(0);" class="text-extra-dark-gray">Fancy collar</a></h5> $99
                            </div>
                        </div>
                    </div>
                    <div class="clear-both"></div>
                    <div class="widget">
                        <div class="widget-title">
                            <h6>Tags</h6>
                        </div>
                        <div class="tags">
                            <a href="#">Carrier</a>
                            <a href="#">Collars</a>
                            <a href="#">Toys</a>
                            <a href="#">Tools</a>
                            <a href="#">Nurture</a>
                            <a href="#">Food</a>
                        </div>
                    </div>
                </div>
            </div>
            <!-- end product grid left panel -->
            <!-- start right panel section -->
            <div class="col-lg-9 col-md-12 padding-30px-left sm-padding-15px-lr">

                <div class="row margin-30px-bottom sm-margin-20px-bottom">
                    <div class="col-12">
                        <div class="float-left bg-light-gray width-100 padding-10px-tb padding-15px-lr">
                            <div class="float-left xs-width-100 text-center">
                                <p class="no-margin line-height-50">Showing 1–9 of 27 results</p>
                            </div>
                            <div class="float-right margin-5px-top xs-no-margin-top xs-width-100 text-center">

                                <div class="float-right xs-float-none xs-width-100 xs-margin-15px-bottom">
                                    <label>Show:</label>
                                    <select class="width-auto display-inline-block no-margin">
                                        <option value="#?limit=24" selected="selected">24</option>
                                        <option value="#?limit=25">25</option>
                                        <option value="#?limit=50">50</option>
                                        <option value="#?limit=75">75</option>
                                        <option value="#?limit=100">100</option>
                                    </select>
                                </div>

                                <div class="float-right margin-20px-right xs-float-none xs-width-100 xs-no-margin-right xs-margin-10px-bottom">
                                    <label>Sort By:</label>
                                    <select class="width-120px display-inline-block no-margin">
                                        <option value="#?sort=p.sort_order&amp;order=ASC" selected="selected">Default</option>
                                        <option value="#?sort=pd.name&amp;order=ASC">Name (A - Z)</option>
                                        <option value="#?sort=pd.name&amp;order=DESC">Name (Z - A)</option>
                                        <option value="#?sort=p.price&amp;order=ASC">Price (Low &gt; High)</option>
                                        <option value="#?sort=p.price&amp;order=DESC">Price (High &gt; Low)</option>
                                        <option value="#?sort=rating&amp;order=DESC">Rating (Highest)</option>
                                        <option value="#?sort=rating&amp;order=ASC">Rating (Lowest)</option>
                                        <option value="#?sort=p.model&amp;order=ASC">Model (A - Z)</option>
                                        <option value="#?sort=p.model&amp;order=DESC">Model (Z - A)</option>
                                    </select>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>

                <div class="row margin-50px-bottom sm-margin-30px-bottom">
                    @foreach (var item in Model.Items)
                    {



            <div class="col-xl-4 col-md-6 margin-30px-bottom sm-margin-20px-bottom">
                <div class="product-pet">
                    <div class="position-relative">
                        @foreach (var image in item.ProductImages)
                        {
                            if (image.IsMain)
                            {
                            <img width="200" height="220" class="first-image" src="~/assets/img/shop/@image.ImageUrl" alt="product"> 
                            }
                                else
                                {
                                    <img width="200" height="220" class="second-image" src="~/assets/img/shop/@image.ImageUrl" alt="product">
                                }


                            }
                    <div class="product-cart">
                        <a asp-controller="wishlist" asp-action="additem" asp-route-id="@Model.Items.FirstOrDefault().Id">
                            <i class="far fa-heart"></i>
                        </a>
                        <a asp-controller="basket" asp-action="additem" asp-route-id="@Model.Items.FirstOrDefault().Id">
                            <i class="fas fa-shopping-cart"></i>
                        </a>
                    </div>
                    </div>
                    <div class="padding-20px-top text-center">
                        <h5 class="margin-5px-bottom font-weight-800"><a href="#" class="font-size26 text-extra-dark-gray">@item.Name</a></h5>
                        <div class="text-secondary-color">
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star"></i>
                            <i class="far fa-star"></i>
                            <i class="far fa-star"></i>
                        </div>
                        <div>
                            <span class="font-weight-700">$@item.Price</span>
                        </div>
                    </div>
                </div>
            </div>
            }
                </div>

                <div class="row">
                    <div class="col-12 no-padding sm-padding-15px-lr">
                        <div class="pagination text-small text-uppercase text-extra-dark-gray">
                            <ul>
                                <li><a href="javascript:void(0);"><i class="fas fa-long-arrow-alt-left margin-5px-right xs-display-none"></i> Prev</a></li>
                                <li class="active"><a href="javascript:void(0);">1</a></li>
                                <li><a href="javascript:void(0);">2</a></li>
                                <li><a href="javascript:void(0);">3</a></li>
                                <li><a href="javascript:void(0);">Next <i class="fas fa-long-arrow-alt-right margin-5px-left xs-display-none"></i></a></li>
                            </ul>
                        </div>
                    </div>
                </div>
                <ul class="pagination justify-content-center mt-30">
                    @for (var i = 1; i <= Model.PageCount; i++)
                    {
                    <li class=" @(Model.CurrentPage==i?"active":"")"><a asp-action="shop" asp-route-page="@i">@i</a></li>}
                </ul>
            </div>
            <!-- end right panel section -->

        </div>
    </div>
</section>
<!-- end product-grid section -->
